# vim: set ft=conf :

font_family      JetBrainsMono NF Regular
bold_font        JetBrainsMono NF Bold
italic_font      JetBrainsMono NF Italic
bold_italic_font JetBrainsMono NF BoldItalic

{{- if (or (eq .chezmoi.hostname "desktop-sericea") (eq .chezmoi.hostname "work-laptop")) }}
font_size 13
{{- end }}

{{- if eq .chezmoi.hostname "laptop-sericea" }}
font_size 16
{{- end }}

# BEGIN_KITTY_THEME
# One Half Dark
include current-theme.conf
# END_KITTY_THEME

window_padding_width 0
resize_in_steps yes
window_margin_width 0

confirm_os_window_close 0
